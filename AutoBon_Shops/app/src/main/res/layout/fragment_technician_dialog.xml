<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fillet_bg_shape"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:minWidth="@dimen/dp200">

    <ImageButton
        android:id="@+id/dialog_close"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:background="@null"
        android:src="@mipmap/iv_delete"
        android:scaleType="centerInside"
        android:layout_gravity="right"/>

    <cn.com.incardata.view.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/user_hint"
        app:border_width="0dp"
        app:border_color="@color/line_color"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:textSize="@dimen/sp15"
        android:textColor="@color/darkgray"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:textColor="@color/darkgray"
            android:text="@string/order_number_text"/>

        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:textColor="@color/main_orange"
            android:layout_marginLeft="@dimen/dp5"/>

        <RatingBar
            android:id="@+id/mratingbar"
            style="@style/mRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:isIndicator="true">
        </RatingBar>

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/owner_bg"
            android:layout_marginLeft="@dimen/dp10"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/main_white"
            android:textSize="@dimen/sp13"/>
    </LinearLayout>


</LinearLayout>