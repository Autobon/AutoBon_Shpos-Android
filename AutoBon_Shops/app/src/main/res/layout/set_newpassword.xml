<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_light_color"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/main_orange">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp35"
            android:layout_height="match_parent"
            android:padding="@dimen/dp10"
            android:src="@mipmap/default_back"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/modify_pwd"
            android:textSize="@dimen/sp18"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp30"
        android:background="@color/lightgray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:background="@android:color/white">
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@null"
            android:layout_marginRight="@dimen/dp30"
            android:inputType="textPassword"
            android:maxLength="18"
            android:hint="@string/input_old_pwd"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp13"/>
        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="@dimen/dp25"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/eye_hidden"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/lightgray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:background="@android:color/white">
        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@null"
            android:layout_marginRight="@dimen/dp30"
            android:inputType="textPassword"
            android:maxLength="18"
            android:hint="@string/input_new_pwd"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp13"/>
        <ImageView
            android:id="@+id/iv_new_eye"
            android:layout_width="@dimen/dp25"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/eye_hidden"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>

    <Button
        android:id="@+id/submit_pwd_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp30"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:text="@string/submit"
        android:gravity="center"
        android:textSize="@dimen/sp15"
        android:background="@drawable/login_btn_selector"
        android:textColor="@android:color/white"/>
</LinearLayout>
