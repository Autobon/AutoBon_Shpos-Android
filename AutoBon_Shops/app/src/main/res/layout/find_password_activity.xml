<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/main_orange">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp35"
            android:layout_height="match_parent"
            android:padding="@dimen/dp10"
            android:src="@mipmap/default_back"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/find_password"
            android:textSize="@dimen/sp18"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp30"
        android:background="@color/lightgray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20">

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:padding="@dimen/dp10"
            android:scaleType="centerInside"
            android:src="@mipmap/iv_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_toLeftOf="@id/iv_clear"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:hint="@string/hint_phone"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp15"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20">

        <Button
            android:id="@+id/btn_check"
            android:layout_width="@dimen/dp65"
            android:layout_height="@dimen/dp35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/check_btn"
            android:text="@string/get_check_btn_text"
            android:textSize="@dimen/sp12"
            android:textColor="@color/main_orange"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_toLeftOf="@id/btn_check"
            android:background="@null"
            android:hint="@string/hint_code"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp15"
            android:inputType="number"
            android:maxLength="6"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20">
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:background="@null"
            android:layout_marginRight="@dimen/dp30"
            android:inputType="textPassword"
            android:maxLength="18"
            android:hint="@string/input_new_pwd"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp15"/>
        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:padding="@dimen/dp5"
            android:scaleType="centerInside"
            android:src="@mipmap/eye_hidden"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp35"
        android:layout_marginRight="@dimen/dp35"
        android:layout_marginTop="@dimen/dp35"
        android:layout_marginBottom="@dimen/dp15"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:text="@string/ok_tips"
        android:gravity="center"
        android:textSize="@dimen/sp15"
        android:background="@drawable/login_btn_selector"
        android:textColor="@android:color/white"/>
</LinearLayout>